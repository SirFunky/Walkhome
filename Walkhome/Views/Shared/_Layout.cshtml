<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Walk Home</title>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="dropdown" style="float:left;">
        <button class="dropbtn">Menu</button>
        <div class="dropdown-content" style="left:0;">
            @Html.ActionLink("Home","index")
            @Html.ActionLink("Create new account.", "Create")
        </div>
    </div>

    <div class="dropdown" style="float:left;">
        <button class="dropbtn">About</button>
        <div class="dropdown-content" style="left:0;">
            @Html.ActionLink("About the Game.", "AboutGame")
            @Html.ActionLink("About the three Sirs.", "AboutThreeSirs")
            @Html.ActionLink("Contact Us.", "Contact")
        </div>
    </div>
    <br>
    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Walk Home</p>
        </footer>
    </div>


</body>
</html>